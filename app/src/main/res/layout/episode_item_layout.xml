<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/episodeImage"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" /> <!-- Replace with your image source -->

    <TextView
        android:id="@+id/episodeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/episodeImage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Episode Number" />

    <TextView
        android:id="@+id/episodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/episodeImage"
        android:layout_below="@id/episodeNumber"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="Episode Name" />

    <TextView
        android:id="@+id/episodeVoteAverage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/episodeImage"
        android:layout_below="@id/episodeName"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="Vote Average" />

    <TextView
        android:id="@+id/episodeOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/episodeImage"
        android:layout_below="@id/episodeVoteAverage"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:text="Overview" />

</RelativeLayout>
