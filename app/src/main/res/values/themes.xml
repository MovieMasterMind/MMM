<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MMM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/toolbarColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="Theme.MMM.NoActionBar" parent="Theme.MMM">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>
    <style name="Theme.MMM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MMM.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>